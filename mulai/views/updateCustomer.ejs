<div class="card">
    <div class="card-header">
        <h4 class="font-weight-bold">Update User</h4>
    </div>
    <div class="card-body">
        <form action="/updateCustomer/<%= customer._id %>" method="post">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="firstname"> Name</label>
                        <input type="text" class="form-control" value="<%= customer.name %>" name="name" placeholder="enter first name" id="firstname">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="lastname"> Email</label>
                        <input type="text" class="form-control" value="<%= customer.email %>" name="email" placeholder="enter last name" id="lastname">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label class="col-form-label" for="phonenumber">Password</label>
                        <input type="text" class="form-control" value="<%= customer.password %>" name="password" placeholder="enter your Password" id="phonenumber">
                    </div>
                </div>
                
            </div>
            <div class="">
                <button type="submit" class="btn btn-success">Update</button>
                <a href="/pembelian" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>