            <div id="choices">
                <div class="choice" id="A" onclick="checkAnswer('Kanji')"></div>
                <div class="choice" id="B" onclick="checkAnswer('Hiragana')"></div>
                <div class="choice" id="C" onclick="checkAnswer('Katakana')"></div>
